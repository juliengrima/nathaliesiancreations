{% extends 'layout.html.twig' %}

{% block body %}

    {% if is_granted('ROLE_ADMIN') %}

        <div class="container">
            <div class="row">
                <div class="col s12">

                    <div class="center">
                        <h1>Je me pr√©sente</h1>
                    </div>

                </div>
            </div>

            {% for about in abouts %}

                <div class="row">
                    <div class="col s12 m6 l6">
                        <div class="row">
                            <div class="col s12 m6 l6">
                                <p>{{ about.about }}</p>
                            </div>
                            <div class="col s12 m6 l6">
                                <img src="{{ asset(about.media.picpath) }}" alt="{{ about.media.picname }}" class="picsize">
                            </div>
                        </div>
                    </div>
                    <div class="col s12 m6 l6">
                        <div class="center">
                            <a href="{{ path('about_edit', { 'id': about.id }) }}">
                                <img src="{{ asset('images/local/icons/edit.svg') }}" class="plus-icon">
                            </a>
                        </div>
                    </div>
                </div>

            {% endfor %}



            {% if abouts != null %}


            {% else %}

                <div class="row">
                    <div class="col s12 center">
                        <a href="{{ path('about_new') }}">
                            <img src="{{ asset('images/local/icons/plus-icon.svg') }}" class="plus-icon">
                        </a>
                    </div>
                </div>

            {% endif %}

        </div>

    {% else %}

        <div class="container">
            <div class="row center">
                <div class="col s12">
                    <img src="{{ asset('images/local/icons/warning-icon1.svg') }}" class="warning">
                </div>
                <div class="col s12">
                    <h2 class="center-align">La page Que vous recherchez n'existe pas</h2>
                </div>
            </div>

        </div>

    {% endif %}


{% endblock %}
