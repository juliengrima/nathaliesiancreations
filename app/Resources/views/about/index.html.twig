{% extends 'layout.html.twig' %}

{% block body %}

    {% if is_granted('ROLE_ADMIN') %}

        <div class="container">
            <div class="row">
                <div class="col s12">

                    <div class="center">
                        <h1>Je me présente</h1>
                    </div>

                </div>
            </div>

            {% for about in abouts %}

                <div class="row">
                    <div class="col s12 m6 l6">
                        <div class="row">
                            <div class="col s12 m6 l6">
                                <p>{{ about.about }}</p>
                            </div>
                            <div class="col s12 m6 l6">
                                <img src="{{ asset(about.media.picpath) }}" alt="{{ about.media.picname }}" class="picsize">
                            </div>
                        </div>
                    </div>
                    <div class="col s12 m6 l6">
                        <div class="center">
                            <a href="{{ path('about_edit', { 'id': about.id }) }}">
                                <img src="{{ asset('images/local/icons/edit.svg') }}" class="plus-icon">
                            </a>
                        </div>
                    </div>
                </div>

            {% endfor %}

            {% if abouts != null %}


            {% else %}

                <div class="row">
                    <div class="col s12 center">
                        <a href="{{ path('about_new') }}">
                            <img src="{{ asset('images/local/icons/plus-icon.svg') }}" class="plus-icon">
                        </a>
                    </div>
                </div>

            {% endif %}

        </div>

    {% else %}

        <link rel="stylesheet" href="{{ asset('css/errors/errors_pages.css') }}" media="all">

        <body class="background-error">

            <div class="row font-color2">
                <div class="col s12">
                    <div class="center-align">
                        <h2>Oops! Ce n'est pas la bonne route!</h2>
                    </div>
                </div>
            </div>
            <div class="row font-color2">
                <div class="col s12 m6 l5">
                    <div>
                        <h3> Vous voilà au bord de la plage, prenez le temps d'observer le paysage.</h3>
                    </div>
                </div>
            </div>
            <div class="row left font-color2">
                <div class="col s12 m8 l7">
                    <div class="position-status">
                        <h3 class="font-color1">Si vous lisez ce message, prévenez<span class="right"> l'administrateur :</span></h3>
                        <h3 class="position-h3 font-color1"> "Erreur 404 - Page non trouvée".</h3>
                    </div>
                </div>
            </div>

        </body>

    {% endif %}

{% endblock %}