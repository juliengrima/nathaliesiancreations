{% endblock %}

{% block body %}

    <div class="container">

    {% for subGallery in subGalleries %}

        {% if subGallery is defined  %}
            <div id="grid" class="main">

                <div class="view">
                    <div class="view-back">
                        {#<span>{{ subGallery.sgallery }}</span>#}
                        {#<span>{{ subGallery.id }}</span>#}
                        {#<a class="modal-trigger" href="#modal1">?</a>#}
                    </div>
                    {#<img src="{{ asset(subGallery.media.picpath) | imagine_filter('my_thumb') }}" alt="{{ subGallery.media.picname }}" class="picsize"/>#}
                    <a class="modal-trigger" href="#modal{{ subGallery.id }}">
                        <img src="{{ asset(subGallery.media.picpath) }}" alt="{{ subGallery.media.picname }}" class="picsize"/>
                    </a>
                </div>

            </div>

        {% else %}

            <div class="container">

                <div class="valign-wrapper">
                    <h5>Nous n'avons pas trouv√© votre recherche</h5>
                </div>

            </div>

        {% endif %}

<!------------------------------- --------------- ------------------------------------->
<!------------------------------- --------------- ------------------------------------->
<!------------------------------- MODAL STRUCTURE ------------------------------------->
<!------------------------------- --------------- ------------------------------------->
<!------------------------------- --------------- ------------------------------------->

        <div id="modal{{ subGallery.id }}" class="modal modal-fixed-footer">
            <div class="modal-content">
                <h4 class="center">{{ subGallery.sgallery }}</h4>
                <p>{{ subGallery.description }}</p>
                <p>{{ subGallery.prix }}</p>
            </div>
            <div class="modal-footer">
                {# ################# Si L'ADMIN EST ACTIF ###########################c#}
                {% if is_granted('ROLE_ADMIN') %}

                    <a href="{{ path('subgallery_edit', { 'id': subGallery.id }) }}" class="left">
                        <img src="{{ asset('images/local/icons/edit.svg') }}" class="plus-icon">
                    </a>
                    <a href="{{ path('subgallery_delete', { 'id': subGallery.id }) }}" class="left">
                        <img src="{{ asset('images/local/icons/delete.svg') }}" class="plus-icon">
                    </a>

                {% endif %}
                {# ################################################################## #}
                <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Quitter</a>
            </div>
        </div>

    {% endfor %}
    </div>

    <div class="container">
        <div class="row">
            <div class="col s12 center">

                {# ################# Si L'ADMIN EST ACTIF ###########################c#}
                {% if is_granted('ROLE_ADMIN') %}

                    <a href="{{ path('subgallery_new') }}" class="btn-floating btn-large waves-effect waves-light green darken-1 modal-action modal-close bouton-new">
                        <i class=" material-icons">add</i>
                    </a>

                {% endif %}
                {# ################################################################## #}

            </div>
        </div>
