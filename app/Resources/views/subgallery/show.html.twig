{% extends 'layout.html.twig' %}

{% block body %}

    {% if is_granted('ROLE_ADMIN') %}

        <div class="container">
            <div class="header-marge">
                <div class="row">
                    <div class="col s12">

                        <div class="row">
                            <h1 class="center">RÃ©sultat de l'enregistrement</h1>
                        </div>

                        <div class="row">
                            <div class="col s12 m6 l3">
                                <p>Nom du nouvel objet :</p>
                            </div>
                            <div class="col s12 m6 l3">
                                <p >{{ subGallery.sgallery }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s12 m6 l3">
                                <p>Description du nouvel objet :</p>
                            </div>
                            <div class="col s12 m6 l3">
                                <p >{{ subGallery.description }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s12 m6 l3">
                                <p>Prix du nouvel objet :</p>
                            </div>
                            <div class="col s12 m6 l3">
                                <p >{{ subGallery.prix }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s12 m6 l3">
                                <p>Photo du nouvel objet :</p>
                            </div>
                            <div class="col s12 m6 l3">
                                <img src="{{ asset( subGallery.media.picpath) }}" alt="{{ subGallery.media.picname }}" class="picsize">
                            </div>
                        </div>

                        <div class="center">

                            <a href="{{ path('subgallery_edit', { 'id': subGallery.id }) }}"
                               data-position="bottom"
                               data-delay="50"
                               data-tooltip="Accueil">
                                <img src="{{ asset('images/local/icons/edit.svg') }}" class="plus-icon"
                                     data-position="bottom"
                                     data-delay="50"
                                     data-tooltip="Accueil">
                            </a>

                            <a class="plus-icon" href="{{ path('homepage') }}">
                                <img src="{{ asset('images/local/icons/home-icon.svg') }}" class="plus-icon"
                                     data-position="bottom"
                                     data-delay="50"
                                     data-tooltip="Accueil">
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    {% else %}

        <div class="container">
            <div class="row center">
                <div class="col s12">
                    <img src="{{ asset('images/local/icons/warning-icon1.svg') }}" class="warning">
                </div>
                <div class="col s12">
                    <h2 class="center-align">La page Que vous recherchez n'existe pas</h2>
                </div>
            </div>

        </div>

    {% endif %}

{% endblock %}
