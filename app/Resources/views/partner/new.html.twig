{% extends 'layout.html.twig' %}

{% block body %}

    {% if is_granted('ROLE_ADMIN') %}

        <div class="container">
            <div class="header-marge">
                <div class="row">
                    <div class="col s12">

                        <div class="row">
                            <h1 class="center">Nouveau partenaire</h1>
                        </div>

                        {{ form_start(form) }}

                        <div class="row">
                            <div class="col s12 m6 l3">
                                <p>Nom du partenaire</p>
                            </div>
                            <div class="col s12 m6 l3">
                                {{ form_widget(form.partner) }}
                                {{ form_errors(form.partner) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col s12 m6 l3">
                                <p>Site Web du partenaire</p>
                            </div>
                            <div class="col s12 m6 l3">
                                {{ form_widget(form.website) }}
                                {{ form_errors(form.website) }}
                            </div>
                        </div>

                        <div class="center">
                            <div class="col s12 center">
                                <button class="left" type="submit">
                                    <img src="{{ asset('images/local/icons/plus-icon.svg') }}" class="plus-icon">
                                </button>

                                <a class="" href="{{ path('partner_index') }}">
                                    <img src="{{ asset('images/local/icons/home-icon.svg') }}" class="plus-icon">
                                </a>
                            </div>

                            {{ form_end(form) }}

                        </div>

                    </div>
                </div>
            </div>
        </div>

    {% else %}

        <link rel="stylesheet" href="{{ asset('css/errors/errors_pages.css') }}" media="all">

        <body class="background-error">

            <div class="row font-color2">
                <div class="col s12">
                    <div class="center-align">
                        <h2>Oops! Ce n'est pas la bonne route!</h2>
                    </div>
                </div>
            </div>
            <div class="row font-color2">
                <div class="col s12 m6 l5">
                    <div>
                        <h3> Vous voilà au bord de la plage, prenez le temps d'observer le paysage.</h3>
                    </div>
                </div>
            </div>
            <div class="row left font-color2">
                <div class="col s12 m8 l7">
                    <div class="position-status">
                        <h3 class="font-color1">Si vous lisez ce message, prévenez<span class="right"> l'administrateur :</span></h3>
                        <h3 class="position-h3 font-color1"> "Erreur 404 - Page non trouvée".</h3>
                    </div>
                </div>
            </div>

        </body>

    {% endif %}

{% endblock %}