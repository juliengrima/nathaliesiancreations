{% extends 'layout.html.twig' %}

{% block body %}

    {% if is_granted('ROLE_ADMIN') %}

        <div class="container">
            <div class="row">
                <div class="col s12">

                    <div class="center">
                        <h1>Mes partenaires</h1>
                    </div>

                </div>
            </div>

            {% for partner in partners %}

                <div class="row">
                    <div class="col s12 m6 l6">
                        <div class="row">
                            <div class="col s12 m6 l6">
                                <p>{{ partner.partner }}</p>
                            </div>
                            <div class="col s12 m6 l6">
                                <p>{{ partner.mail }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="col s12 m6 l6">
                        <div class="center">
                            <a href="{{ path('partner_edit', { 'id': about.id }) }}">
                                <img src="{{ asset('images/local/icons/edit.svg') }}" class="plus-icon">
                            </a>
                            <a href="{{ path('partner_delete', { 'id': about.id }) }}">
                                <img src="{{ asset('images/local/icons/delete.svg') }}" class="plus-icon">
                            </a>
                        </div>
                    </div>
                </div>

            {% endfor %}

            <div class="row">
                <div class="col s12 center">
                    <a href="{{ path('about_new') }}">
                        <img src="{{ asset('images/local/icons/plus-icon.svg') }}" class="plus-icon">
                    </a>
                </div>
            </div>

        </div>

    {% else %}

        <div class="container">
            <div class="row center">
                <div class="col s12">
                    <img src="{{ asset('images/local/icons/warning-icon1.svg') }}" class="warning">
                </div>
                <div class="col s12">
                    <h2 class="center-align">La page Que vous recherchez n'existe pas</h2>
                </div>
            </div>

        </div>

    {% endif %}





    <h1>Partners list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Partner</th>
                <th>Mail</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for partner in partners %}
            <tr>
                <td><a href="{{ path('partner_show', { 'id': partner.id }) }}">{{ partner.id }}</a></td>
                <td>{{ partner.partner }}</td>
                <td>{{ partner.mail }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('partner_show', { 'id': partner.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('partner_edit', { 'id': partner.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('partner_new') }}">Create a new partner</a>
        </li>
    </ul>
{% endblock %}
