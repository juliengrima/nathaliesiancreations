{% extends 'layout.html.twig' %}

{% block body %}

    {% if is_granted('ROLE_ADMIN') %}

        <div class="container">
            <div class="header-marge">
                <div class="row">
                    <div class="col s12">

                        <div class="row">
                            <h1 class="center">Modification de la gallerie</h1>
                        </div>

                        {{ form_start(edit_form) }}

                        <div class="row">
                            <div class="col s12 m6 l3">
                                <p>Modification du nom de la gallerie :</p>
                            </div>
                            <div class="col s12 m6 l3">
                                {{ form_widget(edit_form.name) }}
                                {{ form_errors(edit_form.name) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s12 m6 l3">
                                <p>Modification de la cat√©gorie :</p>
                            </div>
                            <div class="col s12 m6 l3">
                                {{ form_widget(edit_form.header) }}
                                {{ form_errors(edit_form.header) }}
                            </div>
                        </div>

                        <div class="row ">
                            <div class="col s12 center">
                                <button class="left" type="submit">
                                    <img src="{{ asset('images/local/icons/plus-icon.svg') }}" class="plus-icon">
                                </button>

                        {{ form_end(edit_form) }}

                        {{ form_start(delete_form) }}

                                <button class="right" type="submit" name="action"
                                        data-position="bottom"
                                        data-delay="50"
                                        data-tooltip="supprimer">
                                    <img src="{{ asset('images/local/icons/delete.svg') }}" class="plus-icon">
                                </button>

                        {{ form_end(delete_form) }}

                                <a class="" href="{{ path('homepage') }}">
                                    <img src="{{ asset('images/local/icons/home-icon.svg') }}" class="plus-icon">
                                </a>

                            </div>
                        </div>

                        <div class="header-buttom-marge"></div>

                    </div>
                </div>
            </div>
        </div>

    {% else %}

        <div class="container">
            <div class="row center">
                <div class="col s12">
                    <img src="{{ asset('images/local/icons/warning-icon1.svg') }}" class="warning">
                </div>
                <div class="col s12">
                    <h2 class="center-align">La page Que vous recherchez n'existe pas</h2>
                </div>
            </div>

        </div>

    {% endif %}


{% endblock %}
