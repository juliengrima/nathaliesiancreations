{% extends 'layout.html.twig' %}

{% block body %}

    {% if is_granted('ROLE_ADMIN') %}

        <div class="container">
            <div class="header-marge">
                <div class="row">
                    <div class="col s12">

                        <div class="row">
                            <h1 class="center">Résultat de l'enregistrement</h1>
                        </div>

                        <div class="row">
                            <div class="col s12 m6 l3">
                                <p>Nom de la nouvelle gallerie :</p>
                            </div>
                            <div class="col s12 m6 l3">
                                <p >{{ gallery.name }}</p>
                            </div>
                        </div>

                        <div class="center">

                            <a href="{{ path('header_show_all') }}">
                                <button class=" btn-floating btn-large waves-effect tooltipped icon-background6" type="submit" name="action"
                                        data-position="bottom"
                                        data-delay="50"
                                        data-tooltip="liste">
                                    <i class="material-icons">view_list</i>
                                </button>
                            </a>

                            <a class="btn-floating btn-large waves-effect waves-light blue darken-1"
                               data-position="bottom"
                               data-delay="50"
                               data-tooltip="Accueil"
                               href="{{ path('homepage') }}">
                                <i class="small material-icons">home</i>
                            </a>
                        </div>

                        <div class="header-buttom-marge"></div>

                    </div>
                </div>
            </div>
        </div>

    {% else %}

        <link rel="stylesheet" href="{{ asset('css/errors/errors_pages.css') }}" media="all">

        <body class="background-error">

            <div class="row font-color2">
                <div class="col s12">
                    <div class="center-align">
                        <h2>Oops! Ce n'est pas la bonne route!</h2>
                    </div>
                </div>
            </div>
            <div class="row font-color2">
                <div class="col s12 m6 l5">
                    <div>
                        <h3> Vous voilà au bord de la plage, prenez le temps d'observer le paysage.</h3>
                    </div>
                </div>
            </div>
            <div class="row left font-color2">
                <div class="col s12 m8 l7">
                    <div class="position-status">
                        <h3 class="font-color1">Si vous lisez ce message, prévenez<span class="right"> l'administrateur :</span></h3>
                        <h3 class="position-h3 font-color1"> "Erreur 404 - Page non trouvée".</h3>
                    </div>
                </div>
            </div>

        </body>

    {% endif %}

{% endblock %}